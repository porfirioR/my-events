{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (API)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug"],
      "cwd": "${workspaceFolder}/api",
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/api/.env"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Running API",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "localRoot": "${workspaceFolder}/api"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Frontend (SPA)",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/spa/src"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": ["Debug Backend (API)", "Debug Frontend (SPA)"],
      "stopAll": true
    }
  ]
}